<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:id="@+id/rl_activity_general_container"
        style="@style/AppStyle.MatchMatchBackground">
        <EditText
            android:id="@+id/et_code"
            style="@style/AppStyle.BaseEditText"
            android:layout_margin="20dp"/>
        <Button
            android:id="@+id/btn_authenticate"
            style="@style/AppStyle.BaseButton"
            android:layout_alignRight="@+id/et_code"
            android:layout_alignEnd="@+id/et_code"
            android:layout_marginTop="70dp"
            android:text="@string/authenticator_btn_submit" />
    </RelativeLayout>
</layout>